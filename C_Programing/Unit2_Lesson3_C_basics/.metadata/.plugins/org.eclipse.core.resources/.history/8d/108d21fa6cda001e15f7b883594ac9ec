#include <stdio.h>
#include <ctype.h>

char input;

void main()
{
	// take input from user
	printf("Enter a character: ");
	fflush(stdin); fflush(stdout);
	scanf("%c", &input);
	fflush(stdin); fflush(stdout);

	// check the input is character or not

	if(isalpha(input))
	{
		printf("%c is an alphabet");
	}
	else
		printf("%c is not an alphabet");

}
