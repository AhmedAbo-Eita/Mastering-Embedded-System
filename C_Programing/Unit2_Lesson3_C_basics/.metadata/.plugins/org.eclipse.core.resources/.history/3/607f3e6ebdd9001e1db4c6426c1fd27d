#include <stdio.h>

int num = 0;
void main ()
{
	printf("Enter an integer you want to check: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &num);
	fflush(stdin); fflush(stdout);

	if(num%1 == 1 )
	{
		printf("%d is odd ", num);
	}
	else
		printf("%d is even ", num);



}

