#include <stdio.h>

int num;

void main()
{
	//take inputs from user
	printf("Enter a number:\n ");
	fflush(stdin); fflush(stdout);
	scanf(" %d ", &num);
	fflush(stdin); fflush(stdout);
	printf("Enter a number:\n ", num);


	if (num < 0 )
	{
		printf("%d is negative ", num);
	}
	else if (num > 0)
	{
		printf("%d is positive ", num);
	}
	else{
		printf("number is zero");
	}

}
